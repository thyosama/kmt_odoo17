<?xml version="1.0"?>
<odoo>
    <data>


        <template id="create_time_off_success" name="Create Time off">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_text_block pt40 pb40 o_colored_level"
                        data-snippet="s_text_block" data-name="Text"
                        style="background-image: none;">
                        <div class="s_allow_columns container">
                            <div class="row">
                                <div class="col-lg-12 col-xl-11 me-lg-auto o_colored_level">
                                    <span
                                        class="fa fa-thumbs-up bg-primary fa-4x mx-auto d-block img-thumbnail rounded rounded-circle o_anim_fade_in o_animate o_animate_both_scroll"
                                        data-bs-original-title="" title=""
                                        aria-describedby="tooltip303890"
                                        style="animation-duration: 2s !important;" />
                                    <br />
                                    <h1 class="text-center">Happy Vacation </h1>
                                    <div class="pb16 pt16 s_hr" data-snippet="s_hr"
                                        data-name="Separator">
                                        <hr class="mx-auto border-top w-50 border-dark text-center" />
                                    </div>
                                    <h5 class="text-center">
                                        <span class="fa fa-check-circle" />
                                        <span>Your Time Off has been sent <b>successfully</b>
                                        </span>
                                    </h5>
                                    <p class="text-center">We will get back to you shortly.</p>
                                </div>

                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>


        <template id="online_create_timeoff_form">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container">
                        <h2>
                            Request Time Off:
                        </h2>
                        <strong>
                            <span t-esc="message" />
                        </strong>
                        <br />

                        <t t-if="error">
                            <div class="alert alert-danger">
                                <strong>Error!</strong> <t t-esc="error" />
                            </div>
                        </t>
                        <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                var url = new URL(window.location.href);
                                if (url.searchParams.get('error')) {
                                    url.searchParams.delete('error');
                                    history.replaceState({}, document.title, url);
                                }
                            });
                        </script>
                        <form action="/timeoff/submit/" method="post" enctype="multipart/form-data"
                            class="o_mark_required" data-mark="*" data-model_name=""
                            data-success-page="" data-pre-fill="true">
                            <input type="hidden" name="csrf_token"
                                t-att-value="request.csrf_token()" />
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <!--                                    time off type-->
                                <div
                                    class="form-group mb-3 col-8 s_website_form_field s_website_form_required"
                                    data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label
                                            class="col-form-label col-sm-auto s_website_form_label"
                                            style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Time Off Type</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="type_id"
                                                t-attf-class="form-control s_website_form_input"
                                                required="1">
                                                <t t-foreach="type or []" t-as="t">
                                                    <option t-att-value="t.id">
                                                        <t t-esc="t.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <!--                                    date from-->
                                    <div
                                        class="form-group mb-3 col-4 s_website_form_field s_website_form_required"
                                        data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label
                                                class="col-form-label col-sm-auto s_website_form_label"
                                                style="width: 200px" for="studio1">
                                                <span class="s_website_form_label_content">Date From</span>
                                                <span class="s_website_form_mark">*</span>
                                            </label>
                                            <div class="col-sm">
                                                <input id="date_from" type="date"
                                                    class="form-control s_website_form_input"
                                                    name="date_from"
                                                    required="1" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--                                    date to-->
                                    <div
                                        class="form-group mb-3 col-4 s_website_form_field s_website_form_required"
                                        data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label
                                                class="col-form-label col-sm-auto s_website_form_label"
                                                style="width: 100px" for="studio1">
                                                <span class="s_website_form_label_content">Date To</span>
                                                <span class="s_website_form_mark">*</span>
                                            </label>
                                            <div class="col-sm">
                                                <input id="date_to" type="date"
                                                    class="form-control s_website_form_input"
                                                    name="date_to"
                                                    required="1" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--                                    description-->
                                <div class="row s_col_no_resize mb-3 col-8 s_col_no_bgcolor"
                                    data-type="text" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label
                                            class="col-form-label col-sm-auto s_website_form_label "
                                            style="width: 200px">
                                            <span class="s_website_form_label_content">Description</span>
                                        </label>
                                        <div class="col-sm">
                                            <textarea class="form-control s_website_form_input"
                                                name="description"
                                                id="oa9l3ww434xb" rows="3" />
                                        </div>
                                    </div>
                                </div>
                                <!--                                    attachment-->
                                <div
                                    class="row s_website_form_field s_col_no_resize mb-3 col-8 s_col_no_bgcolor"
                                    data-type="many2many"
                                    data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class=" col-sm-auto s_website_form_label "
                                            style="width: 200px"
                                            for="olhpt9oznh5">
                                            <span class="s_website_form_label_content">Supporting
                                                Document If
                                                Needed
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="file"
                                                class="form-control-file o_input_file"
                                                name="attachment_ids" multiple="1" id="olhpt9oznh5"
                                                data-fill-with="commercial_company_name" />
                                        </div>
                                    </div>
                                </div>
                                <!--                                    submit button-->
                                <div class="form-group mb-3 col-8 s_website_form_submit"
                                    data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label" />
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>