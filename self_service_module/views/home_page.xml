<?xml version="1.0" ?>
<odoo>
    <data>


        <template id="self_service_home_page" name="Self Service">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_showcase pt48 pb48 o_colored_level" data-vcss="002" data-snippet="s_showcase"
                             data-name="Showcase" style="background-image: none;">
                        <div class="container">
                            <div class="row g-0 s_col_no_resize s_col_no_bgcolor s_nb_column_fixed">
                                <div class="col-lg text-lg-end">
                                    <div class="row">
                                        <div class="col-lg-12 pt24 pb24 o_colored_level" data-name="Block">
                                            <div class="s_showcase_title d-flex flex-lg-row-reverse mb-2">
                                                <span class="fa fa-calendar s_showcase_icon fa-2x text-secondary me-3 me-lg-0 ms-lg-3"/>
                                                <h3 data-bs-original-title="" title="" aria-describedby="tooltip442432">
                                                    <a href="/timeoff" data-bs-original-title="" title="">
                                                        <font class="text-o-color-1">Request&amp;nbsp;Time
                                                            Off&amp;nbsp;
                                                        </font>
                                                    </a>
                                                </h3>
                                            </div>
                                            <p>Fill the form From Here to Request Your Time off</p>
                                        </div>
                                        <div class="col-lg-12 pt24 pb24 o_colored_level o_we_force_no_transition"
                                             data-name="Block">
                                            <div class="s_showcase_title d-flex flex-lg-row-reverse mb-2">
                                                <span class="fa fa-list s_showcase_icon fa-2x text-secondary me-3 me-lg-0 ms-lg-3"/>
                                                <h3>
                                                    <a href="/timeoff/show">See Your Time Off</a>
                                                </h3>
                                            </div>
                                            <p class="o_default_snippet_text">See all your Time off Requested and their
                                                Status
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-1">
                                    <div class="w-50 h-100 border-end"/>
                                </div>
                                <div class="col-lg">
                                    <div class="row">
                                        <div class="col-lg-12 pt24 pb24 o_colored_level" data-name="Block">
                                            <div class="s_showcase_title d-flex mb-2">
                                                <span class="fa fa-file-o s_showcase_icon fa-2x text-secondary me-3"/>
                                                <h3>
                                                     <a href="/payslips/show">See Your Payslips&amp;nbsp;</a>
                                                    </h3>
                                            </div>
                                            <p>You Can see Your Payslips From Here</p>
                                        </div>
                                        <div class="col-lg-12 pt24 pb24 o_colored_level o_we_force_no_transition"
                                             data-name="Block">
                                            <div class="s_showcase_title d-flex mb-2">
                                                <span class="fa fa-long-arrow-down s_showcase_icon fa-2x text-secondary me-3"/>
                                                <h3><span t-esc="allocation_remaining_display"/> Days</h3>
                                            </div>
                                            <p data-bs-original-title="" title="" aria-describedby="tooltip71147">you
                                                have <span t-esc="allocation_remaining_display"/> days out of <span t-esc="allocation_display"/> days
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </section>
                </div>
            </t>
        </template>

    </data>
</odoo>