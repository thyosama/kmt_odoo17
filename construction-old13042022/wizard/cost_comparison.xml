<odoo>
    <report
            id="action_report_cost_comparison"
            model="cost.comparison"
            string="Cost Comparison Report "
            report_type="qweb-pdf"
            name="construction.report_cost_comparison"
            file="construction.report_cost_comparison"
            />

    <record id="view_costcomparison_pop_wizard" model="ir.ui.view">
        <field name="name">view_costcomparison_pop_wizard</field>
        <field name="model">cost.comparison</field>

        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="project_ids"/>
                    </group>
                    <footer>
                    <button name="view_report" string="View" type="object" class="btn-primary"/>

                    <button name="cancel" string="Cancel" type="object" class="btn-primary"/>


                </footer>
                </sheet>


            </form>
        </field>
    </record>
</odoo>