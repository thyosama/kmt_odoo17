<odoo>


    <template id="report_cost_comparison">

            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <div class="page">
                        <table style="width:100%" class="text-center table table-sm o_main_table">
                            <thead>
                                <th><strong>tender item</strong></th>
                                <th><strong>uom</strong></th>
                                <th><strong>tender quantity</strong></th>
                                <th><strong>Qty</strong></th>
                                <th><strong>Remaining Qty</strong></th>
                                <th><strong>Percente</strong></th>
                                <th><strong>Duration</strong></th>
                                <th><strong>Break Down Item</strong></th>
                                <th><strong>Estimated Qty</strong></th>
                                <th><strong>Estimated Price</strong></th>
                                <th><strong>Estimated Cost</strong></th>
                                <th><strong>Actual Qty</strong></th>
                                <th><strong>Actual Price</strong></th>
                                <th><strong>Actual Cost</strong></th>
                                <th><strong>Diffrence Qty</strong></th>
                                <th><strong>Diffrence Price</strong></th>
                                <th><strong>Diffrence Value</strong></th>

                            </thead>
                            <tbody>
                             <t t-foreach="docs" t-as="o">
                                 <t t-if="o['type_line']=='main'">
                                 <tr>
                                     <td><t t-esc="o['item'].name"/></td>
                                     <td><t t-esc="o['uom_id'].name"/></td>
                                     <td><t t-esc="o['tender_qty']"/></td>
                                     <td><t t-esc="o['total_qty']"/></td>
                                     <td><t t-esc="o['remaing_qty']"/></td>
                                     <td><t t-esc="o['prec']"/></td>
                                     <td><t t-esc="o['duration']"/></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>


                                 </tr>
                                 </t>
                                 <t t-if="o['type_line']=='line'">
                                 <tr>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td></td>
                                     <td><t t-esc="o['job_cost_item']"/></td>
                                     <td><t t-esc="o['estimated_qty']"/></td>
                                     <td><t t-esc="o['estimated_price']"/></td>
                                     <td><t t-esc="o['estimated_cost']"/></td>
                                     <td><t t-esc="o['actual_qty']"/></td>
                                     <td><t t-esc="o['actual_price']"/></td>
                                     <td><t t-esc="o['actual_cost']"/></td>
                                     <td><t t-esc="o['diffrence_qty']"/></td>
                                     <td><t t-esc="o['diffrence_price']"/></td>
                                     <td><t t-esc="o['diffrence_value']"/></td>


                                 </tr>
                                 </t>
<!--                                 <t t-foreach="line" t-as="l">-->
<!--                                     <t t-if="o.item_id==l.item_id">-->
<!--                                         <tr>-->
<!--                                             -->
<!--                                         </tr>-->
<!--                                     </t>-->
<!--                                 </t>-->

                             </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>

    </template>
    <report
            id="action_report_cost_comparison"
            model="cost.comparison"
            string="Cost Comparison Report "
            report_type="qweb-pdf"
            name="construction.report_cost_comparison"
            file="construction.report_cost_comparison"
            />

    <record id="paperformat_construction" model="report.paperformat">
            <field name="name">Construction A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

    	<record id="construction.action_report_cost_comparison" model="ir.actions.report">
		<field name="paperformat_id" ref="construction.paperformat_construction" />
	</record>

</odoo>