<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="quantity_survey_view_form" model="ir.ui.view">
            <field name="name">quantity_survey_view_form</field>
            <field name="model">quantity.survey</field>
            <field name="arch" type="xml">
                <form string="quantity_survey_form">
                    <header>
                        <button name="action_confrim" string="Confirm" type="object" states="draft"/>
                        <button name="action_cancel" string="Cancel" type="object" states="confirm"/>
                        <button name="action_set_draft" string="Set Draft" type="object" states="cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="name"/>
                            </group>

                        </group>
                        <field name="quantity_survey_lines" context="{'default_project_id':project_id}" colspan="4">
                            <tree editable="bottom">
                                <field name="code" width="50px" optional="hide"/>
                                <field name="project_id" width="100px"  optional="hide"/>
                                <field name="tender_line" width="100px" />
                                <field name="item" width="100px"  optional="show"/>
                                <field name="description" width="100px" />
                                <field name="uom_id" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="hide"/>
                                <field name="type" width="50px"  readonly="1" optional="hide"/>
                                <field name="tender_qty"  width="50px"  readonly="1" optional="show"/>
                                <field name="last_qty" width="50px"  readonly="1" optional="show"/>
                                <field name="current_qty" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="show"/>
                                <field name="total_qty" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="show"/>
                                <field name="remaining_qty" width="50px"  optional="show"/>
                                <field name="cost_price" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="show"/>
                                <field name="cost_value" width="50px"  optional="show"/>
                                <field name="sale_price" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="show"/>
                                <field name="sale_value"  width="50px"  optional="show"/>
                                <field name="duration" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="hide"/>
                                <field name="notes" width="50px"  attrs="{'readonly':[('type','=','main')]}" optional="hide"/>
                                <field name="job_id" width="50px"  optional="hide"/>
                            </tree>

                        </field>

                    </sheet>

                </form>
            </field>
        </record>
        <record id="quantity_survey_view_tree" model="ir.ui.view">
            <field name="name">quantity_survey_view_tree</field>
            <field name="model">quantity.survey</field>
            <field name="arch" type="xml">
                <tree string="quantity_survey_tree">
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="quantity_survey_view_action" model="ir.actions.act_window">
            <field name="name">Quantity Survey</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quantity.survey</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="quantity_survey_view_action_menuitem" name="Quantity Survey"
                  parent="construction.construction_root" action="quantity_survey_view_action" sequence="6"/>
        <record id="view_quantity_survey_search" model="ir.ui.view">
            <field name="name">view_quantity_survey_search</field>
            <field name="model">quantity.survey.line</field>
            <field name="arch" type="xml">
                <search>

                    <field name="project_id"/>
                    <field name="item"/>
                    <field name="time_variance"/>

                    <group expand="0" string="Group By">

                        <filter string="Project" name="Project" context="{'group_by': 'project_id'}"/>
                        <filter string="item" name="item" context="{'group_by': 'item'}"/>

                    </group>

                </search>
            </field>
        </record>
        <record id="view_quantity_survey_line_tree" model="ir.ui.view">
            <field name="name">view_quantity_survey_line_tree</field>
            <field name="model">quantity.survey.line</field>

            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="project_id"/>
                    <field name="code"/>
                    <field name="item"/>
                    <field name="description"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="dif" string="Esimated Period"/>
                    <field name="duration" string="Actual period"/>
                    <field name="time_variance"/>
                    <field name="job_id" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>