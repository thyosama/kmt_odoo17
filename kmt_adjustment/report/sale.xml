<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="kmt_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//th[contains(@name, 'th_quantity')]" position="after">
                <th name="th_quantity" class="text-right">Availability</th>
            </xpath>
            <xpath expr="//td[contains(@name, 'td_quantity')]" position="after">
                <td name="td_product_availability" class="text-right">
                    <span t-field="line.product_availability"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>