<odoo>
    <data>
        <record id="kmt_view_move_form" model="ir.ui.view">
            <field name="name">account.move.kmt</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='partner_bank_id']" position="after">-->
<!--                    <field name="ra_invoice_no" attrs="{'invisible':[('move_type', '!=', 'in_invoice')]}"/>-->
<!--                    <field name="client_po_number" attrs="{'invisible':[('move_type', '!=', 'out_invoice')]}"/>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="vendor_code"/>
                </xpath>
            </field>
        </record>
        <template id="vendor_code_account_report_document" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@id='informations']" position="inside">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.vendor_code" name="invoice_vendor_code">
                    <strong>Vendor Code:</strong>
                    <p class="m-0" t-field="o.vendor_code"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>