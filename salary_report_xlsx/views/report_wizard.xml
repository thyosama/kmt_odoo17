<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="payslip_salary_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-condensed" style="direction:rtl">
                        <thead>
                            <tr>
                                <td style="border-style: none;" colspan="9">
                                    <center>
                                        <h2>Employee Salary Report</h2>
                                    </center>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-style: none;" colspan="4">
                                    <span>من :</span>
                                    <span t-esc="form['date_from']" /> - <span>إلى
                                    :</span>
                                    <span t-esc="form['date_to']" />
                                </td>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Ref</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Job</th>
                                <th>Work Date</th>
                                <th>Department</th>
                                <!--                                <th>رقم الحساب</th>-->
                                <span
                                    t-foreach="request.env['hr.payslip.salary.excel'].browse(ids).formate_data_to_pdf(form['hr_payslip_ids'], form['hr_salary_rule_ids'])['rules_ids']"
                                    t-as="line">
                                    <th>
                                        <span
                                            t-esc="request.env['hr.salary.rule'].browse(line).name" />
                                    </th>
                                </span>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="data"
                                t-value="request.env['hr.payslip.salary.excel'].browse(ids).formate_data_to_pdf(form['hr_payslip_ids'], form['hr_salary_rule_ids'])['all_data']" />
                            <t t-set="count" t-value="0" />
                            <tr t-foreach="data" t-as="data_line">
                                <td>
                                    <t t-set="count" t-value="count+1" />
                                    <span t-esc="count" />
                                </td>
                                <td>
                                    <span t-esc="data_line['ref']" />
                                </td>
                                <td>
                                    <span t-esc="data_line['code']" />
                                </td>
                                <td>
                                    <span t-esc="data_line['name']" />
                                </td>
                                <!--                                <td>-->
                                <!--                                    <span t-esc="data_line['emp_name']"/>-->
                                <!--                                </td>-->
                                <td>
                                    <span t-esc="data_line['job']" />
                                </td>
                                <td>
                                    <span t-esc="data_line['start_work']" />
                                </td>
                                <td>
                                    <span t-esc="data_line['department']" />
                                </td>
                                <!--                                <td>-->
                                <!--                                    <span t-esc="data_line['bank_account_id']"/>-->
                                <!--                                </td>-->
                                <t>
                                    <span
                                        t-foreach="request.env['hr.payslip.salary.excel'].browse(ids).formate_data_to_pdf(form['hr_payslip_ids'], form['hr_salary_rule_ids'])['rules_ids']"
                                        t-as="line">
                                        <td>
                                            <t t-if="line in data_line">
                                                <span t-esc="'%.2f'%data_line[line]" />
                                            </t>
                                        </td>
                                    </span>
                                </t>

                            </tr>
                            <tr>
                                <td>Total</td>
                                <td colspan="6" />
                                <t
                                    t-foreach="request.env['hr.payslip.salary.excel'].browse(ids).formate_data_to_pdf(form['hr_payslip_ids'], form['hr_salary_rule_ids'])['rules_ids']"
                                    t-as="total_dict_line2">

                                    <td>
                                        <p>
                                            <span
                                                t-esc="'%.2f'%request.env['hr.payslip.salary.excel'].browse(ids).formate_data_to_pdf(form['hr_payslip_ids'], form['hr_salary_rule_ids'])['total_dict'][total_dict_line2]" />
                                        </p>
                                    </td>
                                </t>
                            </tr>


                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="view_hr_payslip_salary_excel_form" model="ir.ui.view">
        <field name="name">Salary Report</field>
        <field name="model">hr.payslip.salary.excel</field>
        <field name="arch" type="xml">
            <form string="Report Payslips">
                <group string="Select Your Filter">
                    <group>
                        <field name="employee_ids" widget="many2many_tags" />
                        <field name="struct_ids" widget="many2many_tags" />
                        <field name="hr_salary_rule_ids"
                            domain="[('appears_on_payslip', '=', True)]"
                            widget="many2many_tags" />
                        <field name="state" required="1" />
                    </group>
                    <group>
                        <field name="start_date" required="1" />
                        <field name="end_date" required="1" />
                        <field name="company_id" invisible="0" />
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Print Xlsx" type="object"
                        class="btn-primary" />
                    <button name="print_pdf_report" string="Print PDF" type="object"
                        class="btn-primary" />
                    <button string="Cancel" special="cancel" class="btn-default" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_payslip_salary_excel" model="ir.actions.act_window">
        <field name="name">Salary Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.payslip.salary.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="hr_payslip_salary_excel_categ" name="Salary Report"
        parent="hr_payroll.menu_hr_payroll_report"
        action="action_hr_payslip_salary_excel" />

