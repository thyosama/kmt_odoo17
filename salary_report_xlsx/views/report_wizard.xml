    <record id="salary_report_xlsx2" model="ir.actions.report">
        <field name="name">Payslip Salary</field>
        <field name="model">hr.payslip.salary.excel</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">salary_report_xlsx.payslip_salary</field>
        <field name="report_file">salary_report_xlsx.payslip_salary</field>
    </record>

    <record id="paperformat_a4_report1" model="report.paperformat">
        <field name="name">Merit</field>
        <field name="default" eval="True" />
        <field name="format">A3</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="salary_report_xlsx_pdf" model="ir.actions.report">
        <field name="name">Payslip Salary</field>
        <field name="model">hr.payslip.salary.excel</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">salary_report_xlsx.payslip_salary_pdf</field>
        <field name="report_file">salary_report_xlsx.payslip_salary_pdf</field>
        <field name="paperformat_id" ref="salary_report_xlsx.paperformat_a4_report1" />
    </record>
