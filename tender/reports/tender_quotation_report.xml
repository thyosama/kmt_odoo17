<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
             <record id="paperformat_tender_cover_report" model="report.paperformat">
            <field name="name"> Tender Cover Report</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <!-- QWeb Reports -->
        <record id="action_report_tender_technical_offer" model="ir.actions.report">
            <field name="name">Technical Offer</field>
            <field name="model">construction.sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tender.report_technical_offer</field>
            <field name="report_file">tender.report_technical_offer</field>
            <field name="binding_model_id" ref="model_construction_sale_order"/>
            <field name="binding_type">report</field>
        </record>
        <record id="action_report_tender_financial_offer" model="ir.actions.report">
            <field name="name">Financial Offer</field>
            <field name="model">construction.sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tender.report_financial_offer</field>
            <field name="report_file">tender.report_financial_offer</field>
            <field name="binding_model_id" ref="model_construction_sale_order"/>
            <field name="binding_type">report</field>
        </record>
        <record id="action_report_tender_cover" model="ir.actions.report">
            <field name="name">Tender Cover</field>
            <field name="model">project.project</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tender.report_tender_cover</field>
            <field name="report_file">tender.report_tender_cover</field>
            <field name="binding_model_id" ref="model_project_project"/>
            <field name="binding_type">report</field>
        </record>

        <report
                id="action_report_estimation"
                model="construction.job.cost"
                string="Breakdown"
                report_type="qweb-pdf"
                name="tender.report_estimation"
                file="tender.report_estimation"
                paperformat="tender.paperformat_tender_cover_report"
        />



        <record id="tender.action_report_tender_cover" model="ir.actions.report">
            <field name="paperformat_id" ref="tender.paperformat_tender_cover_report"/>
        </record>


    </data>
</odoo>
