<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_technical_offer">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">

                            <style>
                                .tb table,.tb th,.tb td {
                                border: 1px solid black;
                                border-collapse: collapse;
                                text-align:center;
                                }
                                table{
                                width: 100%;
                                }
                            </style>
                            <div class="text-center">
                                <h2>Technical Offer</h2>
                            </div>
                            <div class="row">
                                <h3 t-esc="doc.name"/>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    Customer:
                                    <span t-esc="doc.partner_id.name"/>
                                </div>
                                <div class="col-6">
                                    Created Date:
                                    <span t-esc="doc.created_date"/>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    Project:
                                    <span t-esc="doc.project_id.name"/>
                                </div>
                                <div class="col-6">
                                    Version:
                                    <span t-esc="doc.version"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    Estimation Version:
                                    <span t-esc="doc.estimation_version"/>
                                </div>
                            </div>
                            <br/>

                            <table class="tb">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Item</th>
                                        <th>Description</th>
                                        <th>Unit of Measure</th>
                                        <th>Quantity</th>
                                        <th>Taxes</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="seq" t-value="0"/>
                                    <tr t-foreach="doc.order_lines" t-as="line">
                                        <t t-set="seq" t-value="seq+1"/>
                                        <td>
                                            <t t-esc="line.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.item.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.description"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.uom_id.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.qty"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.tax_ids.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.notes"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>