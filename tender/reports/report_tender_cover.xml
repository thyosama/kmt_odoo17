<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_tender_cover">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page" dir="rtl">
                            <style>
                                .tb table,.tb th,.tb td {
                                border: 1px solid black;
                                border-collapse: collapse;
                                text-align:center;
                                }
                                table{
                                width: 100%;
                                }
                            </style>
                            <div class="text-center">

                                <div class="row">
                                    <div class="col-12 text-right">
                                        إسم المالك:
                                        <span t-esc="doc.partner_id.name"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-right">
                                        إسم المشروع:
                                        <span t-esc="doc.name"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 text-right">
                                        رقم المشروع:
                                        <span t-esc="doc.project_number"/>
                                    </div>
                                    <div class="col-6 text-left">
                                        التاريخ:
                                        <span t-esc="doc.date_start"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-right">
                                        الإجمالي - البنود المستجدة:
                                    </div>
                                </div>

                                <table class="tb">
                                    <thead>
                                        <tr>
                                            <th>البند</th>

                                            <th>الإجمالي</th>
                                        </tr>
                                        <tr >
                                            <th class="text-right" colspan="2"><u>إجمالي ملخص جميع الاقسام</u></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <t t-set="lines" t-value="doc.tender_ids"/>
                                        <t t-set="grand_total" t-value="sum(line.price_subtotal for line in lines)"/>
                                        <tr t-foreach="doc.tender_ids.related_job" t-as="category">
                                            <td>
                                                <t t-esc="category.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="sum(line.price_subtotal for line in lines if category in line.related_job)"/>
                                            </td>

                                        </tr>
                                        <tr>

                                            <td colspan="2" class="text-right" style="padding-right: 30px;">
                                                <p><t t-if="doc.conditions"><t t-raw="doc.conditions"/></t></p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>الإجمالي</td>
                                            <td>
                                                <t t-esc="grand_total"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="text-right">
                                    <span t-esc="doc.num2words_value(grand_total) + ' فقط لاغير '"/>
                                </div>

                                <br/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>