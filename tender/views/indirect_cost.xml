<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="indirect_cost_view_tree" model="ir.ui.view">
        <field name="name">indirect_cost_view_tree</field>
        <field name="model">indirect.cost</field>
        <field name="arch" type="xml">
            <tree string="_tree">
                <field name="project_id"/>
                <field name="split_method"/>
            </tree>
        </field>
    </record>
        <record id="indirect_view_form" model="ir.ui.view">
            <field name="name">_view_form</field>
            <field name="model">indirect.cost</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" states="draft"/>
<!--                        <button name="set_draft" type="object" string="Set Draft" states="cancel"/>-->
                        <button name="action_cancel" type="object" string="Cancel" states="confirm"/>
                              <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="project_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="split_method" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="indirect_cost"  />
                            <field name="lines_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="prec"  />
                                    <field name="price" sum="total"/>
                                    <field name="indirect_cost" invisible="1" sum="total"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                     <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

                </form>
            </field>
        </record>
    </data>
</odoo>