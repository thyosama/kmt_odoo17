<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="safaa_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field name="item_id" />
                </xpath>
            </field>
        </record>
        <record id="purchase_order_form_qty_stock" model="ir.ui.view">
            <field name="name">purchase_order_form_qty_stock</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='product_qty']"
                       position="after">
                    <field name="stock_qtv"/>
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//button[@name='button_approve']" position="replace">
                    <button name="button_approve_2" type="object" string="Second Approve" states="to approve"
                            class="oe_highlight" groups="alsafa_construction_custom.group_second_approve"/>
                    <button name="button_approve" type="object" states="second_approval" string="Approve Order"
                            class="oe_highlight" groups="purchase.group_purchase_manager"/>
                </xpath>
            </field>
        </record>

        <record id="alsfaa_view_purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="item_id" />
                </xpath>
<!--                <xpath expr="//field[@name='line_ids']//form//field[@name='analytic_tag_ids']" position="before">-->
<!--                    <field name="item_id" />-->
<!--                </xpath>-->

            </field>
        </record>
     </data>
</odoo>