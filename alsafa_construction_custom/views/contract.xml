<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!-- Inherit Form View to Modify it -->
<record id="_inherit_view_contract_form_owner" model="ir.ui.view">
    <field name="name">_inherit_view_contract_form</field>
    <field name="model">construction.contract</field>
    <field name="inherit_id" ref="construction.view_contract_form"/>
    <field name="arch" type="xml">

        <xpath expr="//notebook/page[last()]" position="after">
            <page string="Notes">
                <field name="note"  type="html"/>
            </page>
        </xpath>
        <xpath expr="//field[@name='number_of_invoice']" position="after">
            <field name="contract_num"/>
        </xpath>


    </field>
</record>
<record id="_inherit_view_view_contract_form_sub" model="ir.ui.view">
    <field name="name">_inherit_view_view_contract_form_sub</field>
    <field name="model">construction.contract</field>
    <field name="inherit_id" ref="construction.view_contract_form_sub"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='sub_lines_id']//tree//field[@name='tender_id']" position="after">
            <field name="description" />
        </xpath>
        <xpath expr="//field[@name='number_of_invoice']" position="after">
            <field name="contract_num"/>
        </xpath>
        <xpath expr="//notebook/page[last()]" position="after">
            <page string="Notes">
                <field name="note"  type="html"/>
            </page>
        </xpath>

    </field>
</record>
    </data>
</odoo>