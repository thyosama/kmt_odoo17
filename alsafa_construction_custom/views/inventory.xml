<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

     <!-- Inherit Form View to Modify it -->
     <record id="view_picking_form_internal_transfer" model="ir.ui.view">
         <field name="name">view_picking_form_internal_transfer</field>
         <field name="model">stock.picking</field>
         <field name="inherit_id" ref="stock.view_picking_form"/>
         <field name="arch" type="xml">

             <xpath expr="//field[@name='location_id']" position="before">
                 <fiel name="picking_type_code" invisible="1"/>
             </xpath>
             <xpath expr="//field[@name='location_id']" position="attributes">
                 <attribute name="attrs">{'readonly':[('picking_type_code','=','internal')]}</attribute>

             </xpath>

         </field>
     </record>
    </data>
</odoo>