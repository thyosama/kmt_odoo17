<odoo>
 <!-- Inherit Form View to Modify it -->

 <record id="remainng_actual_account_invoice_form" model="ir.ui.view">
     <field name="name">remainng_actual_account_invoice_form</field>
     <field name="model">account.invoice</field>
     <field name="inherit_id" ref="construction.view_move_construction_invoice_form"/>
     <field name="arch" type="xml">

         <xpath expr="//notebook/page[1]/field[@name='invoice_line']/tree/field[@name='price_unit']" position="before">
           <field name="remaining" attrs="{'readonly':True}" width="50px"/>
           <field name="actual_qty" attrs="{'readonly':True}" width="50px"/>
             <!-- Add your fields or attributes here -->
         </xpath>

     </field>
 </record>
 <record id="remainng_actual_account_invoice_form_sub" model="ir.ui.view">
     <field name="name">remainng_actual_account_invoice_form</field>
     <field name="model">account.invoice</field>
     <field name="inherit_id" ref="construction.view_move_construction_invoice_sub"/>
     <field name="arch" type="xml">

         <xpath expr="//notebook/page[1]/field[@name='invoice_line']/tree/field[@name='price_unit']" position="before">
           <field name="remaining" attrs="{'readonly':True}" width="50px"/>
           <field name="actual_qty" attrs="{'readonly':True}" width="50px"/>
             <!-- Add your fields or attributes here -->
         </xpath>

     </field>
 </record>
</odoo>