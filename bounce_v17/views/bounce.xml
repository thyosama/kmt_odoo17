<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="bounce_view_tree" model="ir.ui.view">
            <field name="name">bounce_view_tree</field>
            <field name="model">bounce</field>
            <field name="arch" type="xml">
                <tree string="bounce_tree">
                    <field name="employee_id" optional="show"/>
                    <field name="date" optional="show"/>
                    <field name="type_id" optional="show"/>
                    <field name="type" optional="show"/>
                    <field name="bounce_value" optional="show"/>
                    <field name="contract_id" optional="hide"/>
                    <field name="state" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="bounce_view_form" model="ir.ui.view">
            <field name="name">boucne_view_form</field>
            <field name="model">bounce</field>
            <field name="arch" type="xml">
                <form string="bounce_form">
                    <header>
                        <button name="set_draft" type="object" string="Set Draft"  invisible="state != 'confirmed' or confirmed == True"/>
                        <button name="confirm" type="object" string="Confirm"  invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <h1><field name="name" readonly="1"/></h1>
                        <group>
                            <group>
                                <field name="employee_id" readonly="state == 'confirmed'"/>
                                <field name="contract_id" readonly="state == 'confirmed'"/>
                                <field name="type_id" readonly="state == 'confirmed'"/>
                                <field name="type" readonly="state == 'confirmed'"/>
                                <field name="percentage" invisible="type != 'over'"/>
                            </group>
                            <group>
                                <field name="date" readonly="state == 'confirmed'"/>
                                <field name="bounce_id" readonly="1" force_save="1" invisible="type != 'over'"/>
                                <field name="last_value" invisible="type != 'over'"/>
                                <field name="value" readonly="state == 'confirmed'"/>
                                <field name="bounce_value" readonly="state == 'confirmed'"/>
                                <field name="confirmed" invisible="1"/>
                            </group>
                            <field name="note" readonly="state == 'confirmed'"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="bounce_action" model="ir.actions.act_window">
            <field name="name">Addition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bounce</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="bounce_root" name="Addition" parent="hr.menu_hr_root"/>
        <menuitem id="bounce_menu" name="Addition" parent="bounce_root" action="bounce_action"/>




        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_payslip_form_inherited11" model="ir.ui.view">
            <field name="name">hr.payslip</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Addition">
                        <field name="bounce_line_ids"    >
                            <tree string="Bounes Lines"    >
                                <field name="bounce_id" invisible="1"/>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="notes"/>
                                <field name="bounce_value"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>