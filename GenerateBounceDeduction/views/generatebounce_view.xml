<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="generate_bounce_view_tree" model="ir.ui.view">
            <field name="name">generate_bounce_view_tree</field>
            <field name="model">generate.bounce</field>
            <field name="arch" type="xml">
                <tree string="generate_bounce_tree">
                    <field name="employee_id" optional="show"/>
                     <field name="department_id"  optional="1"/>
                    <field name="position_id" optional="1"/>
                    <field name="emp_badge" optional="1"/>
                    <field name="date" optional="show"/>
                    <field name="type_id" optional="show"/>
                    <field name="type" optional="show"/>
                    <field name="bounce_value" optional="show"/>

                    <field name="contract_id" optional="hide"/>
                    <field name="state" optional="hide"/>
                    <field name="no_month" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="generate_bounce_view_form" model="ir.ui.view">
            <field name="name">generate_bounce_view_form</field>
            <field name="model">generate.bounce</field>
            <field name="arch" type="xml">
                <form string="bounce_form">
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed"/>
                        <button name="set_draft" type="object" string="Set Draft"
                                invisible="state != 'confirmed' or confirmed"/>
                        <button name="confirm" type="object" string="Confirm"
                                invisible="state != 'draft'"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_open_bounces" type="object">
                                <field name="bounce_count" string="Bounces" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>

                        </div>
                        <group>
                            <group>
                                <field name="bounce_ids" widget="many2many_tags" invisible="1"/>
                                <field name="employee_id" readonly="state == 'confirmed'"/>
                                <field name="contract_id" readonly="state == 'confirmed'"/>
                                <field name="type_id" readonly="state == 'confirmed'"/>
                                <field name="type" readonly="state == 'confirmed'"/>
                                <field name="department_id" readonly="1"/>
                                <field name="position_id" readonly="1"/>
                                <field name="emp_badge" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="state == 'confirmed'"/>
                                <field name="value" readonly="state == 'confirmed'"/>
                                <field name="bounce_value" readonly="state == 'confirmed'"/>
                                <field name="no_month" readonly="state == 'confirmed'"/>
                                <field name="confirmed" invisible="1"/>
                            </group>
                            <field name="note" readonly="state == 'confirmed'"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="generate_bounce_action" model="ir.actions.act_window">
            <field name="name">Generate Bounce</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.bounce</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_generate_bounce" name="Generate Addation" parent="bounce_v17.bounce_root"
                  action="generate_bounce_action"/>

