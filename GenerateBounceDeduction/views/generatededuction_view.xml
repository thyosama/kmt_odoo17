<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="generate_deduction_view_tree" model="ir.ui.view">
            <field name="name">generate_deduction_view_tree</field>
            <field name="model">generate.deduction</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" optional="show" />
                    <field name="department_id" optional="show" />
                    <field name="position_id" optional="show" />
                    <field name="emp_badge" optional="show" />
                    <field name="date" optional="show" />
                    <field name="type_id" optional="show" />
                    <field name="type" optional="show" />
                    <field name="deduction_value" optional="show" />

                    <field name="contract_id" optional="hide" />
                    <field name="state" optional="hide" />
                    <!--                    <field name="no_month" optional="hide"/>-->
                </tree>
            </field>
        </record>

        <record id="generate_deduction_view_form" model="ir.ui.view">
            <field name="name">generate_deduction_view_form</field>
            <field name="model">generate.deduction</field>
            <field name="arch" type="xml">
                <form string="deduction_form">
                    <header>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,confirmed" />
                        <button name="set_draft" type="object" string="Set Draft"
                            invisible="state != 'confirmed' or confirmed" />
                        <button name="confirm" type="object" string="Confirm"
                            invisible="state != 'draft'" />

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_open_deductions"
                                type="object">
                                <field name="deduction_count" string="Deductions" widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>

                        </div>
                        <group>
                            <group>
                                <field name="deduction_ids" widget="many2many_tags" invisible="1" />
                                <field name="employee_id" readonly="state == 'confirmed'" />
                                <field name="contract_id" readonly="state == 'confirmed'" />
                                <field name="type_id" readonly="state == 'confirmed'" />
                                <field name="type" readonly="state == 'confirmed'" />
                                <field name="department_id" readonly="1" />
                                <field name="position_id" readonly="1" />
                                <field name="emp_badge" readonly="1" />
                            </group>
                            <group>
                                <field name="date" readonly="state == 'confirmed'" />
                                <field name="value" readonly="state == 'confirmed'" />
                                <field name="deduction_value" readonly="state == 'confirmed'" />
                                <field name="no_month" readonly="state == 'confirmed'" />
                                <field name="confirmed" invisible="1" />
                            </group>
                            <field name="note" readonly="state == 'confirmed'" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="generate_deduction_action" model="ir.actions.act_window">
            <field name="name">Generate Deduction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.deduction</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_generate_deduction" name="Generate Deduction"
            parent="deduction_v17.deduction_root"
            action="generate_deduction_action" />

