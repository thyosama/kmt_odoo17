<odoo>
  <data>

      <record id="report_header_footer" model="ir.actions.act_window">
            <field name="name">Report Header Footer</field>
            <field name="res_model">report.header.footer</field>
            <field name="view_mode">tree,form</field>
           <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>


        <record id="view_sale_order_form" model="ir.ui.view">
          <field name="name">sale.order.form.view.inherit.header.footer</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='partner_id']" position="before">
                  <field name="header_footer_template_id"/>
              </xpath>
          </field>
        </record>

         <record id="view_report_header_footer_form" model="ir.ui.view">
            <field name="name">report.header.footer.form</field>
            <field name="model">report.header.footer</field>
            <field name="arch" type="xml">
                <form>
                   <header>
                       <field name="logo_custom"/>
                   </header>


                   <group>
                       <field name="name"/>
                       <field name="company_id"/>
                        <field name="report_header_custom"/>
                        <field name="report_footer_custom"/>
<!--                        <field name="company_details_custom"/>-->
                   </group>


                </form>
            </field>
        </record>



        <menuitem id="menu_report_header_footer" name="Report Header Footer" parent="sale.sale_menu_root"
                  sequence="100"
                  action="report_header_footer"/>
  </data>
</odoo>
