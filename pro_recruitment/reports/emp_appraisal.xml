<odoo>
    <data>

        <template id="emp_appraisal_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <center>
                                <h2>Appraisal Form</h2>
                            </center>
                            <div class="row">
                                <div class="col-3">
                                    <strong>Employee Name:</strong>
                                </div>
                                <div class="col-6">
                                    <span t-esc="doc.employee_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>Managers:</strong>
                                </div>
                                <div class="col-6">
                                    <span t-esc="doc.manager_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>Appraisal Date</strong>
                                </div>
                                <div class="col-3">
                                    <span t-esc="doc.date"/>
                                </div>
                            </div>
                            <div class="row">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="text-left" scope="col">Objective</th>
                                            <th class="text-center">Score</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total" t-value="0"/>
                                        <t t-set="total" t-value="0"/>
                                        <tr t-foreach="doc.line_ids" t-as="line">
                                            <td>
                                                <span t-field="line.target_goal_id"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="line.score"/>
                                                <t t-set="total" t-value="total+int(line.score)"/>
                                            </td>
                                        </tr>
<!--                                        <tr>-->
<!--                                            <td class="text-center">-->
<!--                                                <b>Total</b>-->
<!--                                            </td>-->
<!--                                            <td/>-->
<!--                                            <td class="text-center">-->
<!--                                                <span t-esc="total"/>-->
<!--                                            </td>-->
<!--                                            <td/>-->
<!--                                        </tr>-->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="emp_appraisal_report" model="ir.actions.report">
            <field name="name">Appraisal Form</field>
            <field name="model">emp.appraisal</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pro_recruitment.emp_appraisal_template</field>
            <field name="report_file">pro_recruitment.emp_appraisal_template</field>
            <field name="print_report_name">'Employee Appraisal Form'</field>
            <field name="binding_model_id" ref="pro_recruitment.model_emp_appraisal"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>