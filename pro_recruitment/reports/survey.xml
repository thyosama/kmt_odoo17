        <record id="survey_report" model="ir.actions.report">
            <field name="name">Short List</field>
            <field name="model">survey.user_input</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pro_recruitment.survey_template</field>
            <field name="report_file">pro_recruitment.survey_template</field>
            <field name="print_report_name">'Short List'</field>
            <field name="binding_model_id" ref="survey.model_survey_user_input"/>
            <field name="binding_type">report</field>
        </record>
        <record id="survey_evaluation_report" model="ir.actions.report">
            <field name="name">Evaluation</field>
            <field name="model">survey.user_input</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pro_recruitment.evaluation_template</field>
