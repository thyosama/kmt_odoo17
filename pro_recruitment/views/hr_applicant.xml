<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="pro_recruit_hr_applicant_view_search_bis" model="ir.ui.view">
            <field name="name">hr.applicant</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='stage_id']" position="after">
                    <field name="is_skilled"/>
                    <field name="is_selected"/>
                    <filter string="Skilled" name="is_skilled" domain="[]" context="{'group_by': 'is_skilled'}"/>
                    <filter string="Selected" name="is_selected" domain="[]" context="{'group_by': 'is_selected'}"/>
                    <!--                    <filter string="Un Skilled" name="is_skilled" domain="[('is_skilled', '=', 'False')]"/>-->

                    <!--                    <filter string="Skilled" name="is_skilled" domain="[('is_skilled', '=', True)]" />-->
                    <!--                    <filter string="Un Skilled" name="is_skilled" domain="[('is_skilled', '=', False)]" />-->
                </xpath>
            </field>
        </record>

        <record id="pro_recruit_hr_applicant_view_form" model="ir.ui.view">
            <field name="name">hr.applicant</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="is_skilled" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='kanban_state']" position="after">
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'zoom': true, 'preview_image':'image_128'}"/>
                </xpath>
                <xpath expr="//field[@name='description']/.." position="attributes">
                    <attribute name="string">Candidate Data</attribute>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Applicant's Skills ">
                        <field name="skills_ids">
                            <tree editable="bottom" create="0" decoration-success="skill_type=='1'"
                                  decoration-bf="skill_type=='1'" decoration-danger="skill_type=='0'">
                                <field name="skill_id" style="width:30%"/>
                                <field name="hr_job_skill_id" invisible="1"/>
                                <field name="skill_score"/>
                                <field name="job_position_skill_id" invisible="1"/>
                                <field name="position_skill_score" optional="hide"/>
                                <!--                                <field name="level"/>-->
                                <!--                                <field name="job_skill_level"/>-->
                                <!--                                <field name="level_progress" style="width:40%" nolabel="1" widget="progressbar"/>-->
                                <field name="skill_type" invisible="1"/>
                            </tree>
                        </field>

                    </page>
                    <page string="Applicant Criteria">
                        <group>
                            <group>
                                <field name="is_selected" invisible="0"/>
                                <field name="education_grade_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="lang_grade_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="experience_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="gender" widget="radio"/>
                            </group>
                        </group>
                    </page>
                    <page string="recommendation">
                        <field name="recommendation" placeholder="Write Recommendation Here ..."/>
                    </page>

                </xpath>
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="placeholder">Write Eduction Here ...</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>