<odoo>
    <data>
        <record id="pro_recruit_employee_skill_view_form" model="ir.ui.view">
            <field name="name">hr.employee.skill</field>
            <field name="model">hr.employee.skill</field>
            <field name="inherit_id" ref="hr_skills.employee_skill_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='skill_id']" position="after">
                    <field name="skill_desc"/>
                </xpath>
            </field>
        </record>
        <record id="pro_recruit_hr_employee_skill_type_view_form" model="ir.ui.view">
            <field name="name">hr.skill.type</field>
            <field name="model">hr.skill.type</field>
            <field name="inherit_id" ref="hr_skills.hr_employee_skill_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='skill_ids']/tree//field[@name='name']" position="after">
                    <field name="description"/>
                </xpath>
            </field>
        </record>
        <menuitem
                id="hr_skills.hr_skill_type_menu"
                name="Skills Inventory"
                action="hr_skills.hr_skill_type_action"
                parent="hr.menu_human_resources_configuration"
                sequence="3"
                groups="base.group_no_one"/>

    </data>
</odoo>