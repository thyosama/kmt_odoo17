<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="emp_job_title_view_tree" model="ir.ui.view">
            <field name="name">emp_job_title_view_tree</field>
            <field name="model">emp.job.title</field>
            <field name="arch" type="xml">
                <tree string="emp_job_title_tree">
                    <field name="name"/>
                    <field name="job_description"/>
                    <field name="job_specification"/>
                </tree>
            </field>
        </record>
        <record id="emp_job_title_view_form" model="ir.ui.view">
            <field name="name">emp_job_title_view_form</field>
            <field name="model">emp.job.title</field>
            <field name="arch" type="xml">
                <form string="emp_job_title_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Software DEV"/>
                            </h1>
                        </div>
                        <group>
                            <field name="job_description"/>
                            <field name="job_specification"/>
                        </group>
                        <notebook>
                            <page name="competencies" string="Competencies Ratio">
                                <field name="skill_rate_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="skill_id" string="Competencies"/>
                                        <field name="skill_score" string="Competencies Level"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="ratio" string="Ratios">
                                <group>
                                    <group>
                                        <field name="target_ratio" />
                                        <field name="competencies_ratio" />
                                        <field name="max_bonuce" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="job_title_action" model="ir.actions.act_window">
            <field name="name">Job Description</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.job.title</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="job_title_menu" name="Job Description" action="job_title_action" sequence="0"
                  parent="hr.menu_human_resources_configuration"/>
        
    </data>
</odoo>