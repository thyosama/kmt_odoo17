<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="pro_recruit_view_hr_job_form" model="ir.ui.view">
            <field name="name">hr.job</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Job Skills Requirements">
                        <field name="skills_ids">
                            <tree editable="bottom">
                                <field name="skill_id" required="True"/>
                                <field name="skill_score" required="True"/>
<!--                                <field name="level"/>-->
<!--                                <field name="level_progress" style="width:40%" nolabel="1" widget="progressbar"/>-->
                            </tree>
                        </field>
                    </page>
                    <page string="Job Position Criteria">
                        <group>
                            <group>
                                <field name="education_grade_id" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="lang_grade_id" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="experience_id" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="gender" widget="radio"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>