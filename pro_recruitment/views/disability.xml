        <record id="hr_recruit_view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='permit_no']" position="after">
                    <field name="extension_code" />
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="string">Supervisor</attribute>
                </xpath>
                <xpath expr="//field[@name='job_title']" position="before">
                    <div>
                        <field name="emp_job_title_id" />
                    </div>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Insurance &amp;  Taxes">
                        <group>
                            <group>
                                <field name="is_social_insurance" />
                                <field name="social_insurance" string="Amount"
                                    invisible="not is_social_insurance" />
                            </group>
                            <group>
                                <field name="is_private_insurance" />
                                <field name="private_insurance" string="Amount"
                                    invisible="not is_private_insurance" />
                            </group>
                            <group>
                                <field name="is_tax_card" />
                                <field name="tax_card" string="Card Number"
                                    invisible="not is_tax_card" />
                            </group>
                            <group>
                                <field name="is_tax_info" />
                                <field name="tax_info" string="Info"
                                    invisible="not is_tax_info" />
                                <field name="tax_card_expire" string="Expire Date"
                                    invisible="not is_tax_info" required="is_tax_info" />
                            </group>
                            <group>
                                <field name="have_income_taxes" />
                            </group>
                        </group>
                    </page>
                </xpath>
                <!--                <xpath expr="//field[@name='employee_skill_ids']" position="after">-->
                <!--                    <field name="skill_rate_ids">-->
                <!--                        <tree editable="bottom">-->
                <!--                            <field name="skill_id"/>-->
                <!--                            <field name="skill_score"/>-->
                <!--                        </tree>-->
                <!--                    </field>-->
                <!--                </xpath>-->
                <xpath expr="//notebook" position="inside">
                    <page name="job_description" string="Job Description &amp; Specification">
                            <label for="job_description" />
                            <field name="job_description" placeholder="Write Job Description ..." nolabel="1"/>
                            <label for="job_specification" />
                            <field name="job_specification" placeholder="Write Job specification ..." nolabel="1" />
                        
                            <field name="skill_rate_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="skill_id" string="Competencies" />
                                    <field name="skill_score" string="Level" />
                                </tree>
                            </field>
                    </page>
                    <page string="Department Objective" name="objective">

                        <field name="objective_ids">
                            <tree editable="bottom">
                                <field name="name" required="1" />
                                <field name="description" required="1" />
                            </tree>
                        </field>
                    </page>
                    <page string="Firm Goals">
                        <field name="goal" placeholder="Firm Goals........." />
                    </page>

                </xpath>
                <xpath expr="//field[@name='coach_id']/.." position="after">
                    <group></group>
                    <grpu>
                        <!--                        <group name="max_bounce_percentage">-->
                        <!--                            <label for="max_bounce_percentage"/>-->
                        <!--                            <div class="o_row" name="bounce_percentage">-->
                        <!--                                <field name="max_bounce_percentage" nolabel="1"/>-->
                        <!--                                <span>%</span>-->
                        <!--                            </div>-->
                        <!--                        </group>-->
                        <br />
                        <group name="max_bonuce">
                            <label for="max_bonuce" />
                            <div class="o_row" name="bounce_percentage">
                                <field name="max_bonuce" nolabel="1" />
                                <span>%</span>
                            </div>
                        </group>
                        <br />
                        <group name="minimum2deserve">
                            <label for="minimum2deserve" />
                            <div class="o_row" name="minimum2deserve">
                                <field name="minimum2deserve" nolabel="1" />
                                <span>%</span>
                            </div>
                        </group>

                    </grpu>
                    <!--                    <field name="minimum2deserve"/>-->
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="after">
                    <field name="disability" />
                    <field name="disability_type" invisible="disability != True" />
                </xpath>
