<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_no_reset_to_draft_cancel" model="ir.ui.view">
        <field name="name">account.move.form.no.reset.to.draft.cancel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">access_right_account.account_move_group</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                <attribute name="groups">access_right_account.invoice_move_group</attribute>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">access_right_account.invoice_move_group</attribute>
            </xpath>
        </field>
    </record>



    <record id="account.action_validate_account_move" model="ir.actions.act_window">
        <field name="name">Post entries</field>
        <field name="res_model">validate.account.move</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.validate_account_move_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="help">This wizard will validate all journal entries selected. Once journal entries are validated,
            you can not update them anymore.
        </field>
        <field name="groups_id" eval="[(6,0,[ref('access_right_account.journal_move_group')])]"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
