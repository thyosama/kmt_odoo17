<odoo>


    <record id="view_job_cost_estimation" model="ir.ui.view">
        <field name="name">view_job_cost_estimation</field>
        <field name="model">construction.job.estimate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group attrs="{'invisible':[('wiz_type','!=','indirect_type')]}">
                            <field name="indirect_type"/>
                            <field name="indirect_percentage"  attrs="{'invisible':[('indirect_type','!=','percentage')]}"/>
                            <field name="indirect_amount" attrs="{'invisible':[('indirect_type','!=','amount')]}"/>
                        </group>
                        <group>
                            <field name="wiz_type" invisible="1"/>
                        </group>
                        <group  attrs="{'invisible':[('wiz_type','!=','profit_type')]}">
                            <field name="profit_type"/>
                            <field name="profit_percentage" attrs="{'invisible':[('profit_type','!=','percentage')]}"/>
                            <field name="profit_amount" attrs="{'invisible':[('profit_type','!=','amount')]}"/>
                        </group>
                        <group></group>
                        <group attrs="{'invisible':[('profit_type','!=','tax_percentage')]}">
                            <field name="tax_percentage"/>
                        </group>


                    </group>
                </sheet>
                <footer>
                    <button name="create_estimation_cost" string="Create Estimation" type="object" class="btn-primary"/>
                    <button name="cancel" string="Cancel" type="object" class="btn-primary"/>


                </footer>
            </form>
        </field>
    </record>
</odoo>