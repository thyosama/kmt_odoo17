<odoo>
    <record id="view_job_cost_fromm" model="ir.ui.view">
        <field name="name">view_job_cost_fromm</field>
        <field name="model">construction.job.cost</field>
        <field name="arch" type="xml">
            <form create="false">
                <header attrs="{'invisible':[('is_template','=',True)]}">
                    <button name="action_confirm" string="Confim" states="draft" type="object" class="btn-primary"/>
                    <button name="action_approve" string="Approve" states="confirm" type="object" class="btn-primary"/>
                    <button name="action_quotation" string="Create Financial Offer" states="approve" type="object"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,quotation"/>
                </header>
                <sheet>
                    <h2>
                        <field name="is_template" invisible="1"/>
                        <field name="name"
                               attrs="{'invisible':[('is_template','=',True)],'readonly':[('is_template','=',False)]}"/>
                        <field name="name2" attrs="{'invisible':[('is_template','=',False)]}"/>
                    </h2>
                    <group>
                        <group>
                            <field name="code"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="item"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="description"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="uom_id"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="qty"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="project_id"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="partner_id"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="job_template" attrs="{'invisible':[('is_template','=',True)]}"/>
                        </group>
                        <group>
                            <field name="type"
                                   attrs="{'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="status" attrs="{'invisible':[('is_template','=',True)]}"/>
                            <!--                            <field name="parent_item" required="1"/>-->

                            <field name="notes" attrs="{'invisible':[('is_template','=',True)]}"/>

                            <field name="start_date" attrs="{'invisible':[('is_template','=',True)]}"/>
                            <field name="date" attrs="{'invisible':[('is_template','=',True)]}"/>
                            <field name="end_date" attrs="{'invisible':[('is_template','=',True)]}"/>
                            <field name="dif" attrs="{'invisible':[('is_template','=',True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Material">
                            <field name="material_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>
                                    <field name="qty" sum="Total Qty"/>
                                    <field name="waste"/>
                                    <field name="planned_qty" readonly="1" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="qty"/>
                                            <field name="waste"/>
                                            <field name="planned_qty" readonly="1"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Labours">
                            <field name="labour_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>

                                    <field name="planned_qty" readonly="1" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty" readonly="1"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>

                        <page string="Expenses">
                            <field name="expense_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>
                                    <field name="planned_qty" readonly="1" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty" readonly="1"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Sub Contractor ">
                            <field name="subconstractor_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>

                                    <field name="planned_qty" readonly="1" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty" readonly="1"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Equipment">
                            <field name="equipment_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>

                                    <field name="planned_qty" readonly="1" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty" readonly="1"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Break Down Estimation">
                            <group>
                                <group>
                                    <br></br>
                                    <field name="indirect_type"/>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <field name="profit_type"/>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <br></br>
                                    <field name="tax_percentage"/>
                                    <field name="tax_amount"/>
                                    <br></br>
                                    <p>---------</p>
                                    <div>
                                        <label for="sales_price" name="Sales Price: "/>
                                        <field name='sales_price'/>
                                        <button type="object" string="Update" name="update_sales_price"
                                                attrs="{'invisible':[('state','=','quotation')]}"/>

                                        <br />
                                        <label for="total_sales_price" name="Sales Price: "/>
                                        <field name="total_sales_price"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="total_value_all"/>
                                    <field name="indirect_percentage"
                                           attrs="{'readonly':[('indirect_type','=','amount')]}"/>
                                    <field name="indirect_amount"
                                           attrs="{'readonly':[('indirect_type','=','percentage')]}"/>
                                    <field name='value_indirect'/>
                                    <field name="profit_percentage"
                                           attrs="{'readonly':[('profit_type','=','amount')]}"/>
                                    <field name="profit_amount"
                                           attrs="{'readonly':[('profit_type','=','percentage')]}"/>
                                    <field name='gross_profit'/>
                                    <field name='gross_profit_total'/>
                                </group>


                            </group>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <group string="Total Per Unit" class="oe_inline">
                            <field name="total_material"/>
                            <field name="total_labour"/>
                            <field name="total_expense"/>
                            <field name="total_subconstractor"/>
                            <field name="total_equipment"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_value_all"/>
                            </div>
                            <field name="total_value_all" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Total With Quantity" class="oe_inline">
                            <field name="total_material_with_qty"/>
                            <field name="total_labour_with_qty"/>
                            <field name="total_expenses_with_qty"/>
                            <field name="total_subcontractor_with_qty"/>
                            <field name="total_equipment_with_qty"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_value_all_with_qty"/>
                            </div>
                            <field name="total_value_all_with_qty" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>


            </form>
        </field>
    </record>

    <record id="view_job_cost_tree" model="ir.ui.view">
        <field name="name">view_job_cost_fromm</field>
        <field name="model">construction.job.cost</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="code" required="1"/>
                <field name="item" required="1"/>
                <field name="description" required="1"/>
                <field name="uom_id" required="1"/>
                <field name="qty" required="1"/>
                <field name="type" required="1"/>
                <field name="status" required="1"/>
                <field name="state"/>
                <field name="sales_price"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="view_job_cost_tree_2" model="ir.ui.view">
        <field name="name">view_job_cost_tree_2</field>
        <field name="model">construction.job.cost</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name" required="1"/>


            </tree>


        </field>
    </record>
    <record id="view_job_cost_fromm_update" model="ir.ui.view">
        <field name="name">view_job_cost_fromm_update</field>
        <field name="model">construction.job.cost</field>
        <field name="priority">1004</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sales_price"/>
                    <field name="sales_price_update" required="1"/>
                </group>
                <footer>
                    <button name="update_price" class="oe_highlight" string="save" type="object"

                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>