<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_payment_view_form" model="ir.ui.view">
            <field name="name">invoice_payment_view_form</field>
            <field name="model">construction.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="invoice_payment_form">
                    <sheet>
                        <field name="payment_ids"/>
                        <field name="invoice_id" invisible="1"/>
                        <field name="partner_id" invisible="1"/>
                        <field name="contract_id" invisible="1"/>
                        <field name="project_id" invisible="1"/>

                    </sheet>
                    <footer>
                        <button name="confirm" class="oe_highlight" type="object" string="Confirm"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="invoice_payment_action" model="ir.actions.act_window">
            <field name="name">Invoice Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.payment.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>