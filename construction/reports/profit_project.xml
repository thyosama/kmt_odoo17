<odoo>
     <record id="view_profit_project_search" model="ir.ui.view">
        <field name="name">view_profit_project_search</field>
        <field name="model">project.profit.report</field>
        <field name="arch" type="xml">
            <search>

                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="partner_id"/>

                <group expand="0" string="Group By">
                    <filter string="Contract" name="Contract" context="{'group_by': 'contract_id'}"/>
                    <filter string="Project" name="Project" context="{'group_by': 'project_id'}"/>
                    <filter string="Customer" name="Partner" context="{'group_by': 'partner_id'}"/>

                </group>

            </search>
        </field>
    </record>
    <record id="view_project_profit" model="ir.ui.view">
        <field name="name">view_project_profit</field>
        <field name="model">project.profit.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="contract_id"/>
                <field name="project_id"/>
                <field name="partner_id"/>
                <field name="contract_value"/>
                <field name="estimate_cost_value"/>
                <field name="estimate_sales_value"/>
                <field name="owner_invoice"/>
                <field name="cost_value"/>
                <field name="profit"/>
                <field name="profit_prec"/>
                <field name="revenue_variance"/>
                <field name="cost_variance"/>

            </tree>
        </field>
    </record>
</odoo>