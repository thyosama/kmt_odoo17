<odoo>


     <record id="view_cost_analysis_search" model="ir.ui.view">
        <field name="name">view_cost_analysis_search</field>
        <field name="model">cost.analysis.report</field>
        <field name="arch" type="xml">
            <search>

                <field name="project_id"/>
                <field name="product_id"/>
                <field name="item"/>
                <field name="date"/>
<!--                <field name="journal_id"/>-->

                <group expand="0" string="Group By">
                    <filter string="Project" name="Project" context="{'group_by': 'project_id'}"/>
                    <filter string="Item" name="Item" context="{'group_by': 'item'}"/>
                    <filter string="Product" name="Product" context="{'group_by': 'product_id'}"/>
<!--                    <filter string="Journal" name="Journal" context="{'group_by': 'journal_id'}"/>-->

                </group>

            </search>
        </field>
    </record>

     <record id="view_cost_analysis" model="ir.ui.view">
        <field name="name">view_project_profit</field>
        <field name="model">cost.analysis.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="product_id"/>
                <field name="product_uom"/>
                <field name="qty"/>
                <field name="value"/>
                <field name="project_id"/>
                <field name="item"/>
<!--                <field name="journal_id"/>-->
            </tree>
        </field>
     </record>
</odoo>