<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_payslip" model="mail.template">
            <field name="name">Payroll: New Payslip</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip" />
            <field name="subject">{{ object.employee_id.name }}, a new payslip is available for you</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ (object.employee_id.user_partner_id.email or object.employee_id.work_email or object.employee_id.private_email or '') }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0"
                    style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;"> Dear <t
                                    t-esc="object.employee_id.name"></t>, a new payslip is available
                                for you.<br /><br /> Please find the PDF in your employee portal.<br /><br />
                                Have a nice day,<br /> The HR Team </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="report_template_ids" eval="[(4, ref('hr_payroll.action_report_payslip'))]" />
            <field name="lang">{{ object.employee_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>