<odoo>


    <record id="view_item_tree" model="ir.ui.view">
        <field name="name">view_item_tree</field>
        <field name="model">product.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="uom_id"/>
                <field name="related_job"/>
            </tree>
        </field>
    </record>
    <record id="view_item_form" model="ir.ui.view">
        <field name="name">view_item_form</field>
        <field name="model">product.item</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="uom_id"/>
                    <field name="related_job"/>
                </group>

            </form>
        </field>
    </record>
</odoo>