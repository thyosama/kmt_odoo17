<odoo>
    <record id="view_job_cost_fromm" model="ir.ui.view">
        <field name="name">view_job_cost_fromm</field>
        <field name="model">construction.job.cost</field>
        <field name="arch" type="xml">
            <form  >
                <header attrs="{'invisible':[('is_template','=',True)]}">
                    <field name="techical_type" invisible="1"/>
                    <button name="action_confirm" string="Confim" states="draft" type="object" class="btn-primary"/>
                    <button name="action_approve" string="Approve" states="confirm" type="object" class="btn-primary"/>
                    <button name="action_quotation" string="Create Financial Offer"  type="object"
                            class="btn-primary" attrs="{'invisible':['|',('state','!=','approve'),('techical_type','=',True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"
                    attrs="{'invisible':[('techical_type','=',True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"
                    attrs="{'invisible':[('techical_type','=',False)]}"/>
                </header>
                <sheet>
                    <h2>
                        <field name="is_template" invisible="1"/>
                        <field name="name"
                               attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'readonly':[('is_template','=',False)]}"/>
                        <field name="name2"
                               attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',False)]}"/>
                    </h2>
                    <group>
                        <group>
                            <field name="code"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="item"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="description"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="uom_id"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="qty"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="project_id"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="partner_id"
                                   attrs="{'required':True,'readonly':[('state','in',('approve','quotation'))],
                                   'invisible':[('is_template','=',True)],'required':[('is_template','=',False)]}"/>
                            <field name="techical_type" invisible="1"/>
<!--                            <field name="wbs_line_id"-->
<!--                                   attrs="{ 'readonly':[('state','in',('approve','quotation'))],-->
<!--                                   'invisible':['|',('techical_type','=',False),('is_template','=',True)],'required':[('is_template','=',False)]}"/>-->
                            <field name="job_template"
                                   attrs="{ 'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <field name="related_job" invisible="1"/>

                        </group>
                        <group>

                            <field name="status"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <!--                            <field name="parent_item" required="1"/>-->

                            <field name="notes"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>

                            <field name="start_date"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <field name="date"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <field name="end_date"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <field name="dif"
                                   attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',True)]}"/>
                            <!--                            <field name="currancy_id" readonly="1"/>-->
<!--                            <field name="currancy_id" attrs="{'readonly':[('state','in',('approve','quotation'))],'invisible':[('is_template','=',False)]}"/>-->

                        </group>
                    </group>
                    <notebook>
                        <page string="Material">
                            <field name="material_ids" attrs="{'readonly':[('state','in',('approve','quotation'))],}">
                                <tree editable="bottom">
                                    <field name="product_id" optional="show"/>
                                    <field name="description" optional="show"/>
                                    <field name="uom_id" optional="show"/>
                                    <field name="qty" sum="Total Qty" optional="show"/>
                                    <field name="waste" optional="show"/>
                                    <field name="planned_qty" sum="Total Planned Qty" optional="show"/>
                                    <field name="currancy_id" optional="show"/>
                                    <field name="ratio" optional="show"/>
                                    <field name="cost_unit" sum="Total Unit cost" optional="show"/>
                                    <field name="cost_subtotal" sum="Total SubTotal" optional="show"/>
                                    <field name="total_qty" sum="Total SubTotal" optional="show"/>
                                    <field name="total_value" sum="Total Value" optional="show"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="qty"/>
                                            <field name="waste"/>
                                            <field name="planned_qty"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Labours">
                            <field name="labour_ids" attrs="{'readonly':[('state','in',('approve','quotation'))],}">
                                <tree editable="bottom">
                                    <field name="product_id" optional="show"/>
                                    <field name="description" optional="show"/>
                                    <field name="uom_id" optional="show"/>

                                    <field name="planned_qty" sum="Total Planned Qty" optional="show"/>
                                    <field name="cost_unit" sum="Total Unit cost" optional="show"/>
                                    <field name="cost_subtotal" sum="Total SubTotal" optional="show"/>
                                    <field name="total_qty" sum="Total SubTotal" optional="show"/>
                                    <field name="total_value" sum="Total Value" optional="show"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>

                        <page string="Expenses">
                            <field name="expense_ids" attrs="{'readonly':[('state','in',('approve','quotation'))],}">
                                <tree editable="bottom">
                                    <field name="product_id" optional="show"/>
                                    <field name="description" optional="show"/>
                                    <field name="uom_id" optional="show"/>
                                    <field name="planned_qty" sum="Total Planned Qty" optional="show"/>
                                    <field name="cost_unit" sum="Total Unit cost" optional="show"/>
                                    <field name="cost_subtotal" sum="Total SubTotal" optional="show"/>
                                    <field name="total_qty" sum="Total SubTotal" optional="show"/>
                                    <field name="total_value" sum="Total Value" optional="show"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="SubContractor ">
                            <field name="subconstractor_ids" attrs="{'readonly':[('state','in',('approve','quotation'))],}">
                                <tree editable="bottom">
                                    <field name="product_id" optional="show"/>
                                    <field name="description" optional="show"/>
                                    <field name="uom_id" optional="show"/>

                                    <field name="planned_qty" sum="Total Planned Qty" optional="show"/>
                                    <field name="cost_unit" sum="Total Unit cost" optional="show"/>
                                    <field name="cost_subtotal" sum="Total SubTotal" optional="show"/>
                                    <field name="total_qty" sum="Total SubTotal" optional="show"/>
                                    <field name="total_value" sum="Total Value" optional="show"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>
                        <page string="Equipment">
                            <field name="equipment_ids" attrs="{'readonly':[('state','in',('approve','quotation'))],}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>

                                    <field name="planned_qty" sum="Total Planned Qty"/>
                                    <field name="cost_unit" sum="Total Unit cost"/>
                                    <field name="cost_subtotal" sum="Total SubTotal"/>
                                    <field name="total_qty" sum="Total SubTotal"/>
                                    <field name="total_value" sum="Total Value"/>
                                </tree>
                                <form>
                                    <group>

                                        <group>
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="uom_id"/>
                                            <field name="planned_qty"/>
                                        </group>
                                        <group>

                                            <field name="cost_unit"/>
                                            <field name="cost_subtotal"/>
                                            <field name="total_qty"/>
                                            <field name="total_value"/>
                                        </group>
                                    </group>


                                </form>
                            </field>
                        </page>

                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <group string="Total Per Unit" class="oe_inline">
                            <field name="total_material"/>
                            <field name="total_labour"/>
                            <field name="total_expense"/>
                            <field name="total_subconstractor"/>
                            <field name="total_equipment"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_value_all"/>
                            </div>
                            <field name="total_value_all" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Total With Quantity" class="oe_inline">
                            <field name="total_material_with_qty"/>
                            <field name="total_labour_with_qty"/>
                            <field name="total_expenses_with_qty"/>
                            <field name="total_subcontractor_with_qty"/>
                            <field name="total_equipment_with_qty"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_value_all_with_qty"/>
                            </div>
                            <field name="total_value_all_with_qty" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>


            </form>
        </field>
    </record>

    <record id="view_job_cost_tree" model="ir.ui.view">
        <field name="name">view_job_cost_fromm</field>
        <field name="model">construction.job.cost</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="code" required="1"/>
                <field name="item" required="1"/>
                <field name="description" required="1"/>
                <field name="uom_id" required="1"/>
                <field name="qty" required="1"/>

                <field name="status" required="1"/>
                <field name="state"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="view_job_cost_tree_2" model="ir.ui.view">
        <field name="name">view_job_cost_tree_2</field>
        <field name="model">construction.job.cost</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name" required="1"/>


            </tree>


        </field>
    </record>


    <record id="search_job_cost" model="ir.ui.view">
        <field name="name">search_job_cost</field>
        <field name="model">construction.job.cost</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" string="name"/>
                <field name="code" string="Code"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Hold" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Version" name="version" context="{'group_by': 'version'}"/>
                 <field name="material_ids" string="Product" filter_domain="[('material_ids.product_id', 'ilike', self)]"/>
            </search>
        </field>
    </record>

</odoo>