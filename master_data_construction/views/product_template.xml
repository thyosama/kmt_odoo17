<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="product_template_only_form_view_construction" model="ir.ui.view">
        <field name="name">product_template_only_form_view_construction</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="before">
                <group>
                    <group>
                        <field name="expense"/>
                        <field name="material"/>
                        <field name="indirect_cost"/>
                        <field name="topsheet"/>

                    </group>
                    <group>
                        <field name="labour"/>
                        <field name="equipment"/>
                        <field name="subContractor"/>
                    </group>

                </group>
                <!-- Add your fields or attributes here -->
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="minimum_profit_amount"/>
                <field name="minimum_profit_percent"/>
            </xpath>

        </field>
    </record>
    <record id="product_normal_minimum_form_view" model="ir.ui.view">
        <field name="name">product_normal_minimum_form_view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="minimum_profit_amount"/>
                <field name="minimum_profit_percent"/>
            </xpath>
        </field>
    </record>
</odoo>